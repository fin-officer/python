# Email LLM Processor Environment Variables

# Email Configuration
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=test@example.com
EMAIL_PASSWORD=password
EMAIL_IMAP_PORT=143
EMAIL_SMTP_PORT=1025
EMAIL_USE_TLS=false

# LLM Configuration
LLM_API_URL=http://ollama:11434
LLM_MODEL=llama2

# Database Configuration
DATABASE_URL=sqlite:///data/emails.db

# Application Configuration
APP_NAME="Email LLM Processor"
LOG_LEVEL=INFO
TEMPLATE_DIR=/data/templates
ARCHIVE_DIR=/data/archive
CHECK_EMAILS_INTERVAL=60  # in seconds

# FastAPI Configuration
DEBUG=true

# MCP Configuration
MCP_SERVER_NAME="Fin Officer MCP"
MCP_SERVER_STATELESS=false
MCP_COMPANY_NAME="Fin Officer"
MCP_COMPANY_SERVICE="Usługi finansowe i księgowe"
MCP_COMPANY_CONTACT_EMAIL=contact@finofficer.com
MCP_COMPANY_SUPPORT_EMAIL=support@finofficer.com
MCP_COMPANY_WEBSITE=https://finofficer.com
MCP_MOUNT_PATH=/mcp
MCP_TRANSPORT=streamable-http